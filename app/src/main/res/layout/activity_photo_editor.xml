<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PhotoEditorActivity">


    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/photo_editor_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/select_image"
            android:background="@drawable/ic_menu_gallery"
            android:contentDescription="@string/edit_intro_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/andika"
            android:text="@string/edit_intro_text"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/left_tools_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageButton
            android:tooltipText="Save"
            android:id="@+id/save"
            style="@style/EditButtons"
            android:src="@drawable/save_icon" />

        <ImageButton
            android:tooltipText="Delete"
            android:id="@+id/delete"
            style="@style/EditButtons"
            android:src="@drawable/delete_icon" />

        <ImageButton
            android:id="@+id/cancle"
            style="@style/EditButtons"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/white" />

        <ImageButton
            android:id="@+id/redo_tool"
            style="@style/EditButtons"
            android:src="@drawable/ic_redo_black_24dp" />

        <ImageButton
            android:id="@+id/undo_tool"
            style="@style/EditButtons"
            android:src="@drawable/undo_tool"
            android:layout_marginBottom="@dimen/zero"/>

    </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_tools_container"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/crop_tool"
            style="@style/EditButtons"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_crop_black_24dp" />

        <ImageButton
            android:id="@+id/filter_tool"
            style="@style/EditButtons"
            android:layout_height="wrap_content"
            android:src="@drawable/filter_icon" />
        <ImageButton
            style="@style/EditButtons"
            android:src="@drawable/ic_tag_faces_black_24dp"
            android:id="@+id/add_Emoji"
            />
        <ImageButton
            style="@style/EditButtons"
            android:src="@drawable/sticker_icon"
            android:id="@+id/add_Sticker"
            />

        <ImageButton
            style="@style/EditButtons"
            android:src="@drawable/add_text"
            android:id="@+id/add_Text"
            />

        <ImageButton
            style="@style/EditButtons"
            android:src="@drawable/base_draw"
            android:id="@+id/draw"
            android:layout_marginBottom="@dimen/zero"
            />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MatchParent"
        android:id="@+id/crop_container"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/crop_Image_View"
            style="@style/MatchParent"
            app:cropGuidelines="onTouch"
            android:background="@color/colorPrimaryDark"
            tools:ignore="MissingConstraints"
            />

        <ImageButton
            android:id="@+id/save_crop"
            style="@style/EditButtons"
            android:src="@drawable/ic_tick_black_24dp"
            android:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="30dp"/>

        <ImageButton
            android:id="@+id/rotate_crop"
            style="@style/EditButtons"
            android:src="@drawable/ic_rotate_right_black_24dp"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="40dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_txt_container"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        android:background="#96000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/carter_one"
            android:padding="5dp"
            android:background="@color/white"
            android:hint="@string/add_text_hint"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/add_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="1"/>

        <ImageButton
            android:id="@+id/bg_color_picker"
            style="@style/EditButtons"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_font_download_black_24dp"
            app:layout_constraintRight_toLeftOf="@id/color_picker"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/color_picker"
            style="@style/EditButtons"
            android:layout_margin="30dp"
            android:src="@drawable/ic_color_lens_black_24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        android:id="@+id/draw_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <ImageButton
            android:src="@drawable/ic_color_lens_black_24dp"
            android:layout_margin="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/brush_color_picker"
            style="@style/EditButtons"
            />
        <ImageButton
            android:layout_marginRight="50dp"
            android:src="@drawable/eraser_icon"
            app:layout_constraintRight_toRightOf="@id/brush_color_picker"
            app:layout_constraintTop_toTopOf="@id/brush_color_picker"
            android:id="@+id/eraser"
            style="@style/EditButtons"
            />
        <ImageButton
            android:layout_margin="30dp"
            android:src="@drawable/ic_tick_black_24dp"
            android:tint="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/close_drawing"
            style="@style/EditButtons"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            app:layout_constraintRight_toLeftOf="@id/brush_size"
            app:layout_constraintBottom_toBottomOf="@id/brush_size"
            android:text="Brush"/>
        <SeekBar
            android:id="@+id/brush_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="60dp"
            android:progressTint="@color/colorPrimary"
            android:layout_marginBottom="100dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:progress="25"
            android:max="100"
            android:min="1"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            app:layout_constraintRight_toLeftOf="@id/opacity"
            app:layout_constraintBottom_toBottomOf="@id/opacity"
            android:text="Opacity"/>
        <SeekBar
            android:id="@+id/opacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="60dp"
            android:progressTint="@color/colorPrimary"
            android:layout_marginBottom="60dp"
            android:progress="100"
            android:max="100"
            android:min="1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        android:id="@+id/filter_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_view"
            android:background="#000000"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sticker_container"
        android:background="#31000000"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/emoji_container"
        android:background="#31000000"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>

